{
  "name": "@zarinpal/web-components",
  "version": "2.0.24",
  "private": false,
  "description": "ZarinPal web components and design system with Vue, Typescript, and TailwindCSS",
  "author": "ZarinPal front-end team",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn build:vue && yarn build:tailwind",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "build:tailwind": "rimraf dist/tailwind-preset.js && rollup --config rollup.config.js",
    "build:vue": "vue-cli-service build src/index.ts --target lib --name zwc --inline-vue && rm ./dist/demo.html",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook",
    "story": "vue-cli-service storybook:serve -p 6006 -c config/storybook",
    "test": "yarn test:unit"
  },
  "main": "dist/zwc.umd.js",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/vue": "^6.0.26",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^1.0.3",
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "css-loader": "^6.2.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^6.0.1",
    "postcss": "^7",
    "postcss-loader": "^6.1.1",
    "rollup": "^2.53.3",
    "sass": "^1.38.0",
    "sass-loader": "^10",
    "style-loader": "^3.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2",
    "typescript": "~4.1.5",
    "vue": "^2.6.14",
    "vue-cli-plugin-storybook": "~2.1.0",
    "vue-template-compiler": "^2.6.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel",
    "testMatch": [
      "**/src/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/components/**/*.vue"
    ]
  },
  "keywords": [
    "ZarinPal",
    "Component Library",
    "Web Components",
    "Vue",
    "TailwindCSS"
  ],
  "license": "ZarinPal",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZarinPal/web-components"
  },
  "types": "index.d.ts"
}

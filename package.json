{
  "name": "@zarinpal/web-components",
  "version": "2.1.24",
  "private": false,
  "description": "ZarinPal web components and design system with Vue, Typescript, and TailwindCSS",
  "author": "ZarinPal front-end team",
  "scripts": {
    "serve": "vue-cli-service serve",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "build:rollup": "rimraf dist/filters.js && rimraf dist/designTokens.js && rollup --config rollup.config.js",
    "build:vue": "vue-cli-service build src/index.ts --target lib --name zwc --modern && rm ./dist/demo.html",
    "build": "yarn build:vue && yarn build:rollup",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook",
    "story": "vue-cli-service storybook:serve -p 6006 -c config/storybook",
    "test": "yarn test:unit"
  },
  "main": "dist/zwc.umd.js",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/vue": "^6.4.9",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.21.1",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-vue": "^8.0.3",
    "node-sass": "^6.0.1",
    "rollup": "^2.53.3",
    "sass": "^1.38.0",
    "sass-loader": "^10",
    "storybook-tailwind-dark-mode": "^1.0.11",
    "storybook-vue-router": "^1.0.7",
    "style-loader": "^3.2.1",
    "typescript": "~4.5.5",
    "vue": "^2.6.14",
    "vue-cli-plugin-storybook": "~2.1.0",
    "vue-cli-plugin-tailwind": "^3.0.0",
    "vue-router": "^3.5.3",
    "vue-template-compiler": "^2.6.14"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel",
    "testMatch": [
      "**/src/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/components/**/*.vue"
    ]
  },
  "keywords": [
    "ZarinPal",
    "Component Library",
    "Web Components",
    "Vue",
    "TailwindCSS"
  ],
  "license": "ZarinPal",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZarinPal/web-components"
  },
  "types": "index.d.ts",
  "dependencies": {
    "@types/moment-jalaali": "^0.7.5",
    "autoprefixer": "^10",
    "moment": "2.24.0",
    "moment-jalaali": "^0.9.2",
    "moment-locales-webpack-plugin": "^1.2.0",
    "postcss": "^8",
    "rollup-plugin-multi-input": "^1.3.1",
    "storybook-vue-router": "^1.0.7",
    "tailwindcss": "^3",
    "vee-validate": "^3.4.13",
    "vue-class-component": "^7.2.6",
    "vue-persian-datetime-picker": "^2.10.2",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.3"
  }
}
